  "dependencies": {
    "apollo-server-express": "^2.14.2",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "express-graphql": "^0.8.0",
    "graphql": "^14.3.1",
    "graphql-tools": "^4.0.4",
    "mongoose": "^5.5.8"
  },
  "devDependencies": {
    "nodemon": "^1.19.0"
  }
}
