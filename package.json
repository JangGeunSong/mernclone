{
  "name": "mernclone",
  "version": "1.0.0",
  "description": "Clone web site mark1",
  "main": "server.js",
  "scripts": {
    "client-install": "npm istall --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
